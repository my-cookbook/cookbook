<section class="container">

	<img class="img-fluid recipe-header-image" src="/foodimages/{{recipe.recipeImage}}" alt="Card image cap">

	<h1>{{recipe.recipeTitle}}</h1>
	{{#if recipe.recipeNotes}}
	<p>{{recipe.recipeNotes}}</p>
	{{/if}}
	

	<h3>Instructions</h3>

	<div class="steps">
		{{{recipe.recipeProcedure}}}
	</div>

	<h3>Instructions</h3>

	<ol>
		{{#each recipe.Ingredients}}
			<li>{{quantity}} {{measurement}} {{name}}</li>
		{{/each}}
	</ol>
</section>